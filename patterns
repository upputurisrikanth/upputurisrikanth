#include <stdio.h>

int main(){
	int i,j,n;
	scanf("%d", &n);
	int num = 1;
	for(i = 1; i <= n; i++){
		
		for(j = i; j < n; j++){
			printf(" ");
		}
		for(j = 1; j <=i; j++){
			printf("* ");
		}
		
		printf("\n");
	}
	
	for(i = 1; i <= n; i++){
		
		for(j = 1; j <=i; j++){
			printf(" ");
		}
		for(j = i; j <n; j++){
			printf("* ");
		}
		
		printf("\n");
	}
	return 0;
}

#include <stdio.h>

int main(){
	int i,j,n;
	scanf("%d", &n);
	int num = 1;
	for(i = 1; i <= n; i++){
		for(j = 1; j <= i; j++){
			printf("%d ", num);
		}
		printf("\n");
		num++;
	}
	return 0;
}


//reverse
#include <stdio.h>

int main(){
	int i,j,n;
	scanf("%d", &n);
	int num = 1;
	for(i = 1; i <= n; i++){
		for(j = i; j < n; j++){
			printf("  ");	
		}
		for(j = 1; j <= i; j++){
			printf("%d ", num);
		}
		printf("\n");
		num++;
	}
	return 0;
}
